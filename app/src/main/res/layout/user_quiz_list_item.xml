<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <TextView
        android:id="@+id/quizNameTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="QuizName"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/quizDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#DD1414"
        android:contentDescription="@string/quizStartImage"
        android:maxWidth="120dp"
        android:minWidth="120dp"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:id="@+id/quizEditButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#E8DE13"
        android:contentDescription="@string/quizStartImage"
        android:maxWidth="120dp"
        android:minWidth="120dp"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />
    <ImageButton
        android:id="@+id/quizStartButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#59BD3E"
        android:contentDescription="@string/quizStartImage"
        android:maxWidth="120dp"
        android:minWidth="120dp"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_marginRight="10dp" />

</LinearLayout>